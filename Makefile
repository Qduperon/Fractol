#==============================================================================#
#                               // NAME \\                                     #
#==============================================================================#

NAME = fractol

#==============================================================================#
#                           //  SOURCES  \\                                    #
#==============================================================================#

SRCS = srcs/draw.c \
	   srcs/env.c \
	   srcs/fractal.c \
	   srcs/hook.c \
	   srcs/main.c \
	   srcs/mouse.c \
	   srcs/pixel.c \
	   srcs/tools.c \

#==============================================================================#
#                             //  FLAGS  \\                                    #
#==============================================================================#

FLAGS = -Wall -Werror -Wextra

#==============================================================================#
#                             // OBJECTS  \\                                   #
#==============================================================================#

OBJ = $(SRCS:.c=.o)

#==============================================================================#
#                            // COMPILATION \\                                 #
#==============================================================================#

all: $(NAME)

$(NAME): $(OBJ)
	@echo "Begin Fractol..."
	make -C libft
	make -C minilibx_macos
	gcc -o $(NAME) $(FLAGS) $(OBJ) -L minilibx_macos -lmlx -framework OpenGL -framework AppKit libft/libft.a minilibx_macos/libmlx.a
	@echo "Fractol Done"

#==============================================================================#
#                              // DELETING \\                                  #
#==============================================================================#

clean:
	make clean -C libft
	rm -f $(OBJ)

fclean: clean
	make fclean -C libft
	make clean -C minilibx_macos
	rm -f $(NAME)

#==============================================================================#
#                             // RETRY \\                                      #
#==============================================================================#

re: fclean all

.PHONY : all clean fclean re
